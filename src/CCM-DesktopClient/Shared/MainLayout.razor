@using BlazorDesktopClient.Models
@using CCMFramework
@inherits LayoutComponentBase

@if (logininfo == null)
{
    <div class="main">
        <Login/>
    </div>
}
else
{
    <div class="sidebar">
        <NavMenu/>
    </div>

    <div class="main">
        <div class="top-row px-4">
        </div>

        <div class="content px-4">
            @Body
        </div>
    </div>
}

@code {
    LoginInfo logininfo;

    protected override async Task OnInitializedAsync()
    {
        var liMgr = Singleton<LoginInfoManager>.Instance();
        logininfo = liMgr.GetLoginInfo();
    }
}