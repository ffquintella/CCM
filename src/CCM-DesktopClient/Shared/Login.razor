@using BlazorDesktopClient.Models

<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>CCM Login Form</title>
<style type="text/css">
	.login-form {
		width: 340px;
    	margin: 50px auto;
	}
    .login-form form {
    	margin-bottom: 15px;
        background: #f7f7f7;
        box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
        padding: 30px;
    }
    .login-form h2 {
        margin: 0 0 15px;
    }
    .form-control, .btn {
        min-height: 38px;
        border-radius: 2px;
    }
    .btn {        
        font-size: 15px;
        font-weight: bold;
    }
</style>
</head>
<body>
<div class="top-row pl-4">
    <a  href="">CCM Client</a>
</div>
<div class="login-form">
    <!--form action="/examples/actions/confirmation.php" method="post"-->
    <EditForm Model="@_loginFormModel" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator/>
        <ValidationSummary/>
        <h2 class="text-center">Log in</h2>       
        <div class="form-group">
            <InputText id="Username" type="text" class="form-control" placeholder="Username" required="required" @bind-Value="_loginFormModel.Login"/>
        </div>
        <div class="form-group">
            <InputText id="password" type="password" class="form-control" placeholder="Password" required="required" @bind-Value="_loginFormModel.Password" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block" @onclick="ExecuteLogin">Log in</button>
        </div>
        <div class="clearfix">
            <label class="pull-left checkbox-inline"><InputCheckbox id="rememberMe" type="checkbox" @bind-Value="_loginFormModel.RememberMe" /> Remember me</label>
            <a href="#" class="pull-right">Forgot Password?</a>
        </div>        
    </EditForm>
    <!--p class="text-center"><a href="#">Create an Account</a></-p-->
</div>
</body>
</html>     

@code {

    private LoginFormModel _loginFormModel = new LoginFormModel();
    
    void ExecuteLogin()
    {
        Console.WriteLine("Login: {0} - Remember:{1}", _loginFormModel.Login, _loginFormModel.RememberMe);
    }

    private void HandleValidSubmit()
    {
        
    }

}


